# Authentication (Zitadel SSO)
NEXTAUTH_SECRET=your-random-secret-key-here  # Generate with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000

# LLM Provider
OPENAI_API_KEY=sk-...

# Text-to-Speech (TTS)
ELEVENLABS_API_KEY=sk_...  # Get from https://elevenlabs.io/app/settings/api-keys

# Notion Integration
NOTION_API_TOKEN=secret_...
NOTION_DATABASE_STORIES_ID=
NOTION_DATABASE_EPICS_ID=

# GitHub Integration
GITHUB_TOKEN=ghp_...
GITHUB_REPO=org/repo
GITHUB_DEFAULT_BRANCH=main

# LiveKit (Self-Hosted)
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# Redis
REDIS_URL=redis://localhost:6379

# Database (Primary - PostgreSQL)
DATABASE_URL=postgresql://foundry:foundry@postgres:5432/foundry

# Database Administration URLs (for admin backup/restore/management)
# These are separate from DATABASE_URL to allow admin tools to manage all databases
POSTGRES_ADMIN_URL=postgresql://foundry:foundry@postgres:5432/foundry

# Zitadel (Identity Provider)
ZITADEL_URL=http://localhost:8082
ZITADEL_CLIENT_ID=
ZITADEL_CLIENT_SECRET=

# OpenFGA (Authorization)
OPENFGA_STORE_ID=
OPENFGA_AUTH_MODEL_ID=
REDIS_ADMIN_URL=redis://redis:6379
MONGODB_ADMIN_URL=mongodb://foundry:foundry@mongodb:27017/?authSource=admin

# MongoDB (Dossier Storage - Isolated Security Boundary)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=agent_foundry_dossiers
MONGODB_USERNAME=dossier_service
MONGODB_PASSWORD=secure_password_here
MONGODB_TLS=false
MONGODB_AUTH_SOURCE=admin
DOSSIER_ENCRYPTION_KEY=  # Generate with: openssl rand -base64 32

# Environment Configuration
TENANT_ID=local-dev
ENVIRONMENT=development

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=agent-foundry
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# LangSmith Integration (for agent tracing)
LANGSMITH_API_KEY=lsv2_...  # Get from https://smith.langchain.com
LANGSMITH_PROJECT=agent-foundry
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Service Ports
MCP_SERVER_PORT=8000
COMPILER_PORT=8002
FORGE_PORT=8003
MCP_INTEGRATION_PORT=8100
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_LIVEKIT_URL=ws://localhost:7880
NEXT_PUBLIC_FORGE_API_URL=http://localhost:8003

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_TELEMETRY=true
ENABLE_MOCK_MODE=false

# N8N Integration
N8N_ENCRYPTION_KEY=super-secret-long-key
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=foundry2024